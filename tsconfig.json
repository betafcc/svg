{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "lib": ["es2018", "dom"],
    "strict": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**"]
}
